<% context_path = ENV["CONTEXT_PATH"] %>

<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">

    <% if params['department_id'].nil? or params['department_id'] == '' %>
      <div class="row">
        <div class="col-md-12">
          <h1>Departments<span style="float: right">
              <%= link_to '', browse_path, class: 'fa fa-chevron-circle-left fa-2x' %>
              </span></h1>
          <br/><br/><br/>
          <% @department_list.each_with_index do |dept, index| %>
            <div class="col-md-3 registers-grid">
              <%= link_to browse_departments_path(department_id: dept[0]) do %>
                <h2><%= dept[1][0] %></h2>
              <% end %>
            </div>
            <% num = index + 1
               if num.modulo(4).zero? %>
                </div>
                <div style="clear: both;"></div>
                <div class="col-md-12">
            <% end %>
          <%
            end %>
          </div>
          <div style="clear: both;"></div>

      </div>

    <% else %>
      <div class="row">
        <div class="col-md-12">
          <h1><%= session['department_name'] %><span style="float: right">
              <%= link_to '', browse_departments_path, class: 'fa fa-chevron-circle-left fa-2x' %>
              </span></h1>
          <br/><br/><br/>
          <% @series_list and @series_list.each_with_index do |series, index| %>
            <div class="col-md-3 registers-grid">
              <%= link_to browse_departments_path(series_id: series[0]) do %>
                <h2><%= series[1][0] %></h2>
                <p><%= series[2][0] %></p>
              <% end %>
            </div>
            <% num = index + 1
               if num.modulo(4).zero? %>
              </div>
              <div style="clear: both;"></div>
              <div class="col-md-12">
            <% end %>
          <%
            end %>
          </div>
          <div style="clear: both;"></div>

          </div>
    <% end %>
  </div>
  <div class="col-md-2"></div>
</div>