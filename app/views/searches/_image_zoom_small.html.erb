<%# Display OpenSeadragon image here %>
<div id="location1" style="background-color: black"></div>
<div style="clear: both"></div>
<%# Display links to large image zom %>
<div id="image_footer" style="text-align: center">
  <em><%= link_to 'Click here to enlarge', '#', :onclick => "popup('/image_zoom_large', '" + @folio_id + "'); return false" %></em>:
  <a href='#' onclick="popup('/image_zoom_large', '<%= @folio_id %>'); return false" title="Click here to enlarge"><span class='fa fa-search-plus fa-2x mag_icon'></span></a>
</div>
<div style="clear: both"></div>
<%# Display OpenSeadragon image at 'location1' above  %>
<script type="text/javascript">
  var viewer = OpenSeadragon({
      id: "location1",
      prefixUrl: "assets/seadragonImages/",
      autoResize: true,
      showNavigationControl: false,
      tileSources: [{
          "@context": "http://iiif.io/api/image/3/context.json",
          "@id": "<%= IIIF[Rails.env]['image_api_url'] %><%= get_folio_image_iiif(@folio_id) %>",
          "height": 9400,
          "width": 6400,
          "profile": [ "http://iiif.io/api/image/3/level3.json" ],
          "protocol": "http://iiif.io/api/image",
          "tiles": [{
            "scaleFactors": [ 1, 2, 4, 8, 16, 32 ],
            "width": 1024 }]
      }]
  });
</script>
